# MySQL 9 Configuration
[mysqld]
# Basic settings
user                    = mysql
pid-file                = /var/run/mysqld/mysqld.pid
socket                  = /var/run/mysqld/mysqld.sock
basedir                 = /usr
datadir                 = /var/lib/mysql
tmpdir                  = /tmp

# Disable binary logging by default
skip-log-bin

# Disable performance schema for better performance
performance_schema = OFF

# Character set
character-set-server    = utf8mb4
collation-server        = utf8mb4_unicode_ci

# SQL Mode (MySQL 9 compatible)
sql-mode                = "STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION,ONLY_FULL_GROUP_BY"

# InnoDB Settings
innodb_buffer_pool_size = 1G
innodb_flush_log_at_trx_commit = 1
innodb_flush_method     = O_DIRECT
innodb_file_per_table   = 1

# Connection settings
max_connections         = 100
max_connect_errors      = 100
wait_timeout            = 28800
interactive_timeout     = 28800
connect_timeout         = 10

# Security
#skip_name_resolve       = 1
#skip_show_database

# Logging
general_log             = 1
general_log_file        = /var/log/mysql/mysql.log
slow_query_log          = 1
slow_query_log_file     = /var/log/mysql/mysql-slow.log
long_query_time         = 2
log_error               = /var/log/mysql/error.log
log_error_verbosity     = 3

[mysql]
default-character-set   = utf8mb4

[client]
default-character-set   = utf8mb4
socket                 = /var/run/mysqld/mysqld.sock
